@model MVC_TV_Shop.Models.TVModel;

<h1>Create new TV</h1>
<hr />

<form asp-action="Create" method="post" class="row g-3">
  <div class="col-12">
    <label asp-for="Model" class="form-label">Model</label>
    <input asp-for="Model" type="text" class="form-control" placeholder="Samsung QE55QN90BAUXUA Neo QLED">
  </div>
  <div class="col-md-6">
    <label asp-for="Diagonal" class="form-label">Diagonal</label>
    <input asp-for="Diagonal" type="text" class="form-control" placeholder="55″">
  </div>
   <div class="col-md-6">
    <label class="form-label">Resolution</label>
    <input type="text" class="form-control" placeholder="3840x2160 UHD 4K">
  </div>
  <div class="col-md-6">
    <label asp-for="Year" class="form-label">Year</label>
    <input asp-for="Year" type="number" class="form-control" placeholder="2020">
  </div>
  <div class="col-md-6">
    <label asp-for="Price" class="form-label">Price</label>
    <input asp-for="Price" type="number" class="form-control" placeholder="999">
  </div>
  <div class="col-md-6">
    <button type="submit" class="btn btn-primary">Create</button>
  </div>
</form>